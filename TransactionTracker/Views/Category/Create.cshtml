@model TransactionTracker.Models.Category

@{
    ViewData["Title"] = "Create";
}

<div class="container-fluid">
    <div style="text-align:center">
        <div style="font-size:medium ;color:gray">Add Category</div>
        <div>Add new category to the System</div>
        </div>
        <div class="row" style="margin-top:5px">
            <div class="col-md-8">
            <form asp-action="Create">
       <div asp-validation-summary="ModelOnly" class="text-danger"></div>
       <div class="form-group">
           <label asp-for="Icon" class="control-label"></label>
           <input asp-for="Icon" class="form-control" />
           <span asp-validation-for="Icon" class="text-danger"></span>
       </div>
                <div class="form-group">
                    <label asp-for="Tittle" class="control-label"></label>
                    <input asp-for="Tittle" class="form-control" />
                    <span asp-validation-for="Tittle" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Type" class="control-label"></label>
                    <input asp-for="Type" class="form-control" />
                    <span asp-validation-for="Type" class="text-danger"></span>
                </div>
                <div><input type="submit" class="btn-primary" value="Create"/></div>
                </form>
            </div>
            </div>

</div>